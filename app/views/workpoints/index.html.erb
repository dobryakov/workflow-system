<h1>Listing workpoints</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workpoints.each do |workpoint| %>
      <tr>
        <td><%= link_to 'Show', workpoint %></td>
        <td><%= link_to 'Edit', edit_workpoint_path(workpoint) %></td>
        <td><%= link_to 'Destroy', workpoint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workpoint', new_workpoint_path %>
