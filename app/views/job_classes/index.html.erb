<h1>Listing job_classes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_classes.each do |job_class| %>
      <tr>
        <td><%= link_to 'Show', job_class %></td>
        <td><%= link_to 'Edit', edit_job_class_path(job_class) %></td>
        <td><%= link_to 'Destroy', job_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

